@model int

@section Scripts {
    <script src="~/js/projectsController.js" type="text/javascript"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/lib/summernote/dist/summernote.css" rel="stylesheet" />
}

<div ng-controller="projectsController as vm">
    <div class="row wrapper border-bottom white-bg page-heading" ng-init="vm.loadProjectToEdit(@Model)">
        <div class="col-lg-10">
            <h2>Project edit</h2>
            <ol class="breadcrumb">
                <li>
                    <a ng-href="/App/Index">Home</a>
                </li>
                <li>
                    <a ng-href="/Projects/Index">Projects</a>
                </li>
                <li class="active">
                    <strong>Project: {{vm.editedProject.name}}</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight ecommerce">
        <div class="row">
            <div class="col-lg-12">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab-1"> Project info</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane active">
                            <div class="panel-body">
                                <fieldset class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Code:</label>
                                        <div class="col-sm-10">
                                            <input type="text" ng-model="vm.editedProject.code" class="form-control" placeholder="Project code">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Name:</label>
                                        <div class="col-sm-10">
                                            <input type="text" ng-model="vm.editedProject.name" class="form-control" placeholder="Project name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Description:</label>
                                        <div class="col-sm-10">
                                            <summernote ng-model="vm.editedProject.description"></summernote>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="createDate" class="col-sm-2 control-label">Created:</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input name="createDate" ng-model="vm.editedProject.createTimeStamp" class="form-control" readonly="readonly" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="createDate" class="col-sm-2 control-label">Last update:</label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input name="lastUpdateDate" ng-model="vm.editedProject.lastUpdateTimeStamp" class="form-control" readonly="readonly" />
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>